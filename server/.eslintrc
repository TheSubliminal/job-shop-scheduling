{
  "env": {
    "node": true,
    "es6": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "array-bracket-spacing": ["error", "never"],
    "arrow-spacing": "error",
    "camelcase": "error",
    "computed-property-spacing": ["error", "never"],
    "curly": "error",
    "eqeqeq": ["error", "always"],
    "indent": ["error", 2, {
      "SwitchCase": 1
    }],
    "key-spacing": ["error", {
      "beforeColon": false,
      "afterColon": true
    }],
    "keyword-spacing": ["error", {
      "before": true,
      "after": true
    }],
    "no-console": ["error", {
      "allow": ["warn", "error"]
    }],
    "no-useless-constructor": "error",
    "no-var": "error",
    "prefer-const": "error",
    "semi": ["error", "always"],
    "space-before-blocks": ["error", "always"],
    "space-in-parens": ["error", "never"],
    "quotes": ["error", "single"]
  }
}